#₀⁰₁¹₂²₃³₄⁴₅⁵₆⁶₇⁷₈⁸₉⁹⋅−⋅⋅−⋅⋅⋅−⋅⋅⋅−⋅⋅−Prompt −⋅⋅−⋅⋅⋅−⋅⋅⋅−⋅⋅−⋅₀⁰₁¹₂²₃³₄⁴₅⁵₆⁶₇⁷₈⁸₉⁹
#‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾
autoload -Uz compinit promptinit

compinit
promptinit
prompt walters


autoload -U colors && colors

PS1="%{$fg[green]%}%B%#%b%{$fg[blue]%}%B%T%b%{$fg[cyan]%}%B%.%b%{$fg[magenta]%}%B>%b%{$reset_color%}%"


#_______________________________________________________________________________
#₀⁰₁¹₂²₃³₄⁴₅⁵₆⁶₇⁷₈⁸₉⁹⋅−⋅⋅−⋅⋅⋅−⋅⋅⋅−⋅Completion ⋅−⋅⋅⋅−⋅⋅⋅−⋅⋅−⋅₀⁰₁¹₂²₃³₄⁴₅⁵₆⁶₇⁷₈⁸₉⁹
#‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾
setopt completealiases

zstyle ':completion:*' menu select
zstyle ':completion:*' completer _complete _ignored _approximate
zstyle ':completion:*' matcher-list '' 'm:{[:lower:]}={[:upper:]}'
zstyle :compinstall filename '/home/keiwop/.zshrc'

[ -r /etc/profile.d/cnf.sh ] && . /etc/profile.d/cnf.sh


#_______________________________________________________________________________
#₀⁰₁¹₂²₃³₄⁴₅⁵₆⁶₇⁷₈⁸₉⁹⋅−⋅⋅−⋅⋅⋅−⋅⋅⋅−⋅⋅−⋅Path ⋅−⋅⋅−⋅⋅⋅−⋅⋅⋅−⋅⋅−⋅₀⁰₁¹₂²₃³₄⁴₅⁵₆⁶₇⁷₈⁸₉⁹
#‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾
typeset -U path

path=($path /home/_/bin/racket-5.93/bin /home/_/bin)
ld_library_path=($ld_library_path /home/_/bin/racket-5.93/lib /home/_/lib)
CLASSPATH=($CLASSPATH /usr/share/java/saxon/saxon9.jar)


#_______________________________________________________________________________
#₀⁰₁¹₂²₃³₄⁴₅⁵₆⁶₇⁷₈⁸₉⁹⋅−⋅⋅−⋅⋅⋅−⋅⋅⋅−⋅⋅−Aliases−⋅⋅−⋅⋅⋅−⋅⋅⋅−⋅⋅−⋅₀⁰₁¹₂²₃³₄⁴₅⁵₆⁶₇⁷₈⁸₉⁹
#‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾
alias ll='ls -lhpF --color=auto'
alias lll='ls -lChpFR --color=auto'
alias la='ls -lhpFa --color=auto'
alias cd_='cd /home/_'
alias cdf='cd /home/_/work/fac'
alias gotosleep='machine_suspend'
alias gotohiber='machine_hibernate'
alias gotopoweroff='machine_poweroff'


#_______________________________________________________________________________
#₀⁰₁¹₂²₃³₄⁴₅⁵₆⁶₇⁷₈⁸₉⁹⋅−⋅⋅−⋅⋅⋅−⋅⋅⋅−⋅⋅−⋅Misc ⋅−⋅⋅−⋅⋅⋅−⋅⋅⋅−⋅⋅−⋅₀⁰₁¹₂²₃³₄⁴₅⁵₆⁶₇⁷₈⁸₉⁹
#‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾‾
machine_suspend(){
	systemctl suspend
	echo '\tGoing to sleep'
	echo '\tBye'
	sleep 2
}

machine_hibernate(){
	echo '\n\tWinter is coming...'
	sleep 1
	echo '\t...Going into hibernation mode'
	sleep 2
	echo '\nIt was a joke, the hard drive has crashed.'
	echo 'Now your computer is going to explode in'
	sleep 3
	for ((i = 3; i > 0; i--)); do
		echo '\t'$i;
		sleep 1
	done;
	systemctl hibernate
}

machine_poweroff(){
	systemctl poweroff
	sleep 1
	echo '\n\tPowering off in'
	sleep 1
	for ((i = 3; i > 0; i--)); do
		echo '\t'$i;
		sleep 1
	done;
}

